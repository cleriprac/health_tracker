  <% if user_signed_in? %>

<div class="well">
    <div class="well">
      <h3>Calories Consumed:</h3>
      <span id="<%= current_user.id %>_total_gained"><%= current_user.total_gained %></span> calories
    </div>
    <%= link_to "Enter Food", new_food_path, id: "new_link_food", remote: true, :class => "btn btn-primary" %>
    <hr>

    <table id="foods" class="table table-bordered">
      <tr>
        <th><%= sortable "name" %></th>
        <th><%= sortable "calories" %></th>
        <th><%= sortable "created_at" %></th>
      </tr>

    <% @foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.calories %> calories</td>
        <td class="small"><%= food.formatted_time %></td>
      </tr>

    <% end %>
    <%= will_paginate @foods, :param_name => "food_page"%>
    </table>



  <% else %>
    <p>You must sign in to add a food.</p>
  <% end %>


</div>
